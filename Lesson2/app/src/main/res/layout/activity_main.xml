            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/_9"
            android:textColor="@color/button_texColor"
            android:textSize="30sp" />

        <Button
            android:id="@+id/plus"

            android:layout_width="@dimen/button_layout_width"
            android:layout_height="@dimen/button_layout_height"
            android:layout_weight="1"
            android:background="@drawable/buttonsshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/_plus"
            android:textColor="@color/button_texColor"
            android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/horizontal_LinearLayout"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/number_00"

            android:layout_width="@dimen/button_layout_width"
            android:layout_height="@dimen/button_layout_height"
            android:layout_weight="1"
            android:background="@drawable/buttonsshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/_00"
            android:textColor="@color/button_texColor"
            android:textSize="30sp" />

        <Button
            android:id="@+id/number_0"

            android:layout_width="@dimen/button_layout_width"
            android:layout_height="@dimen/button_layout_height"
            android:layout_weight="1"
            android:background="@drawable/buttonsshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/_0"
            android:textColor="@color/button_texColor"
            android:textSize="30sp" />

        <Button
            android:id="@+id/number_point"

            android:layout_width="@dimen/button_layout_width"
            android:layout_height="@dimen/button_layout_height"
            android:layout_weight="1"
            android:background="@drawable/buttonsshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
